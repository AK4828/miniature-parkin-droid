<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_agent_buyer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Agent 101"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/text_date_buyer_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Date : 02-September-2015"
                    android:textSize="@dimen/sp16"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/esales"/>

            <TextView
                android:id="@+id/text_no_buyer_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="2015090800002"
                android:textSize="@dimen/sp14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_title_total_item_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah item: "
                    android:textSize="@dimen/sp14"/>

                <TextView
                    android:id="@+id/text_total_item_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 (Satu)"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_name_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Produk: "/>

                <TextView
                    android:id="@+id/text_mama_produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A7TS"/>
            </LinearLayout>-->

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order: "/>

                <TextView
                    android:id="@+id/text_jumlah_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_title_total_order_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Order: "
                    android:textSize="@dimen/sp14"/>

                <TextView
                    android:id="@+id/text_total_order_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 2.800.000,-"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/esales"/>

            <ListView
                android:id="@+id/list_item_buyer_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#EBEBEB"
            android:gravity="bottom">

            <Button
                android:id="@+id/button_confirm_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#37B867"
                android:text="Konfirmasi Pembayaran"
                android:textColor="@color/text_white"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>